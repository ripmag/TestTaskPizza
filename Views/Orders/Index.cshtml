@model IEnumerable<TestTaskPizza.Models.Order>

@{
    ViewBag.Title = "Список всех заказов";
}

<h3>@ViewBag.Title</h3>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.NumberPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <th>
        @Html.DisplayFor(i => item.CreateDate)
    </th>
    <th>
        @Html.DisplayFor(i => item.Client.Name)
    </th>
    <th>
        @Html.DisplayFor(i => item.Client.NumberPhone)
    </th>
    <th>
        @Html.DisplayFor(i => item.Client.email)
    </th>
    <th>
        @Html.DisplayFor(i => item.DishName)
    </th>
    <th>
        @Html.DisplayFor(i => item.DishAmount)
    </th>
    <th>
        @Html.DisplayFor(i => item.DishPrice)
    </th>

    <th>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </th>
</tr>
}

</table>
