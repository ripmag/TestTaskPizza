@model IEnumerable<TestTaskPizza.Models.Product>
@{
    ViewBag.Title = "Пицеррия";
}

<div>
    <h3>Имеющиеся продукты</h3>
    <br />
    <fieldset>
        <h3>@Html.ActionLink("Добавить продукт", "Create", "Product")</h3>
        <table class="table table-striped">
            <tr>
                <td>@Html.DisplayNameFor(model => model.ImagePath)</td>
                <td><p> @Html.DisplayNameFor(model => model.Name)  </p></td>
                <td><p> @Html.DisplayNameFor(model => model.SellPrice) </p></td>
                <td><p> @Html.DisplayNameFor(model => model.Balance) </p></td>
                <td><p> @Html.DisplayNameFor(model => model.MinBalance) </p></td>
                <td></td>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{
                            if (item.ImagePath != null)
                            {
                                <div class="display-label">
                                    <img src="~/Content/Images/@Url.Content(item.ImagePath)" alt="Oppa" style="height:80px;width:120px;" />
                                </div>
                            }
                        }
                    </td>
                    <td><p>@Html.DisplayFor(modelItem => item.Name)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.SellPrice)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.Balance)</p></td>
                    <td><p>@Html.DisplayFor(modelItem => item.MinBalance)</p></td>
                    <td>
                        @Html.ActionLink("Убрать", "Delete", new { item.Id }, htmlAttributes: null)
                        @Html.ActionLink("Редактировать", "Edit", new { item.Id }, htmlAttributes: null)

                    </td>

                </tr>
            }

        </table>
    </fieldset>
</div>